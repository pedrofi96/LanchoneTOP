@model IEnumerable<LanchoneTOP.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Lista de Pedidos</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-outline-primary">Criar Novo Pedido</button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEnviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEntregueEm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PedidoEnviado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.PedidoId">
                            <button type="button" class="btn btn-outline-primary">Editar</button>
                        </a>
                    <a asp-action="Details" asp-route-id="@item.PedidoId">
                            <button type="button" class="btn btn-outline-primary">Detalhes</button>
                        </a>
                    <a asp-action="Delete" asp-route-id="@item.PedidoId">
                            <button type="button" class="btn btn-outline-danger">Deletar</button>
                        </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
