@model LanchoneTOP.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}
<div class="text-center">
<h1>Delete</h1>
<h3>Você tem certeza de que deseja deletar essa Categoria?</h3>
</div>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a asp-action="Index">
            <button type="button" class="btn btn-outline-primary">Voltar à lista</button>
        </a>
    </form>
</div>
